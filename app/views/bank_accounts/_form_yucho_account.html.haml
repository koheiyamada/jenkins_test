=form_for @bank_account, url:{action: 'create'}, as: :bank_account do |f|
  =render 'application/validation_errors', model: @bank_account
  =hidden_field_tag :bank, params[:bank] if params[:bank]
  %table.table
    %tr
      %th=t('common.account_number')
      %td.account-number
        =f.text_field :kigo1, maxlength: 5, class: 'input-small', placeholder: t('common.kigo')
        =f.text_field :kigo2, maxlength: 1, class: 'input-mini'
        =f.text_field :bango, maxlength: 8, class: 'input-medium', placeholder: YuchoAccount.human_attribute_name(:bango)
        %p.help=t('yucho_account.message.second_text_field_can_be_blank')
    %tr
      %th=t('common.account_holder_name')
      %td
        =f.label :account_holder_name do
          =t('common.kanji')
          =f.text_field :account_holder_name
        =f.label :account_holder_name_kana do
          =t('common.kana2')
          =f.text_field :account_holder_name_kana
  .buttons.form-actions
    =f.submit "ご登録内容の確認", class: 'btn'
