%table.table.yucho_account
  %tr
    %th=t('common.bank_name')
    %td=t('common.yucho')
  %tr
    %th=t('common.account_number')
    %td
      =@bank_account.kigo1
      -if @bank_account.kigo2.present?
        \-
        =@bank_account.kigo2
      \-
      =@bank_account.bango
  %tr
    %th=t('common.account_holder_name')
    %td
      .account_holder_name
        =@bank_account.account_holder_name
      .account_holder_name_kan
        =@bank_account.account_holder_name_kana
