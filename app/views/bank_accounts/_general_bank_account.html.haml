%table.table
  %tr
    %th=t('common.bank_name')
    %td=bank_name @bank_account
  %tr
    %th=GeneralBankAccount.human_attribute_name :bank_code
    %td=@bank_account.bank_code
  %tr
    %th=GeneralBankAccount.human_attribute_name :branch_name
    %td=@bank_account.branch_name
  %tr
    %th=GeneralBankAccount.human_attribute_name :branch_code
    %td=@bank_account.branch_code
  %tr
    %th=GeneralBankAccount.human_attribute_name :account_type
    %td=account_type @bank_account
  %tr
    %th=GeneralBankAccount.human_attribute_name :account_number
    %td=@bank_account.account_number
  %tr
    %th=t('common.account_holder_name')
    %td
      .account_holder_name
        =@bank_account.account_holder_name
      .account_holder_name_kan
        =@bank_account.account_holder_name_kana
