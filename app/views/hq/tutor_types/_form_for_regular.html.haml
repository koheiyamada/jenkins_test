=form_tag hq_tutor_type_path(@tutor), class: 'tutor-type-select', method: :put do
  =label_tag :tutor_type_BeginnerTutor, class: 'radio' do
    =radio_button_tag :tutor_type, :BeginnerTutor, false, disabled: !@tutor.can_become?('BeginnerTutor')
    =tutor_type 'BeginnerTutor'
  =label_tag :tutor_type_SpecialTutor, class: 'radio' do
    =radio_button_tag :tutor_type, :SpecialTutor, false, disabled: !@tutor.can_become?('SpecialTutor')
    =tutor_type 'SpecialTutor'

  %ul.help
    %li=t('tutor.about_being_regular_tutor2')

  .form-actions.buttons
    =link_to t('common.cancel'), hq_tutor_path(@tutor), class: 'btn'
    =button_tag t('common.change'), class: 'btn btn-primary'
