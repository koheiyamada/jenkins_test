%ul.breadcrumb
  %li
    =link_to_unless_current t('titles.tutors'), hq_tutors_path
  =breadcrumb_item user_display_name(@tutor), hq_tutor_path(@tutor)
  =breadcrumb_item t('titles.monthly_statements'), hq_tutor_monthly_statements_path(@tutor)
  =breadcrumb_item t('titles.monthly_statement', month:l(@monthly_statement.date, :format => :month_year)), hq_tutor_monthly_statement_path(@tutor, @monthly_statement)
  =breadcrumb_item t('titles.journal_entries'), hq_tutor_monthly_statement_journal_entries_path(@tutor, @monthly_statement)
  -if @journal_entry
    =breadcrumb_item @journal_entry.name, hq_tutor_monthly_statement_journal_entry_path(@tutor, @monthly_statement, @journal_entry)
