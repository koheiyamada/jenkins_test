%ul.breadcrumb
  %li
    =link_to_unless_current t("titles.students"), hq_students_path
  =breadcrumb_item user_display_name(@student), hq_student_path(@student)
  -if params[:action] == 'edit'
    =breadcrumb_item t('titles.change_address'), edit_hq_student_address_path(@student)
  -else
    =breadcrumb_item t('titles.address'), hq_student_address_path(@student)
