=content_for :tabmenu do
  =render 'nav_tab'

%h1=title t("titles.bs_list")

=render 'shared/centered_search_box'

-if @bs_list.blank?
  =t('common.not_found')
-else
  =render layout:'bss/bss', locals:{bss:@bs_list} do |bs|
    =img_link_to 'common.detail', hq_bs_path(bs), class:'small'
    =link_to new_hq_my_message_path(bs_id: bs.id), class: 'btn btn-small' do
      %i.icon-envelope-alt
      =t('common.send_message')
  =paginate @bs_list
