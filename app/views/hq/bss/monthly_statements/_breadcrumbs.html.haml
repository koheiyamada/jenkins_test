%ul.breadcrumb
  %li=link_to_unless_current t("titles.bs_list"), hq_bss_path
  =breadcrumb_item bs_name(@bs), hq_bs_path(@bs)
  =breadcrumb_item t("titles.monthly_statements"), hq_bs_monthly_statements_path(@bs)
  -if @monthly_statement
    =breadcrumb_item t("titles.monthly_statement", month:l(@monthly_statement.date, :format => :month_year)), hq_bs_monthly_statement_path(@bs, @monthly_statement)
