%ul.breadcrumb
  %li
    =link_to_unless_current user_display_name(@student), pa_student_path(@student)
  =breadcrumb_item t('titles.monthly_statements'), pa_student_monthly_statements_path(@student)
  =breadcrumb_item monthly_statement_title(@monthly_statement), pa_student_monthly_statement_path(@student, @monthly_statement)
  =breadcrumb_item t('titles.journal_entries'), pa_student_monthly_statement_journal_entries_path(@student, @monthly_statement)
  -if @journal_entry
    =breadcrumb_item @journal_entry.name, pa_student_monthly_statement_journal_entry_path(@student, @monthly_statement, @journal_entry)
