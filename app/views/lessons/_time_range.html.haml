- show_timezone = false unless defined?(show_timezone)
.time_range
  %span.date=l(lesson.start_time.to_date, :format => :year_month_day) if lesson.start_time
  %span.time-range
    %span.start-time=l(lesson.started_at || lesson.start_time, :format => :only_time) if lesson.start_time
    \-
    %span.end-time=l(lesson.ended_at || lesson.end_time, :format => :only_time) if lesson.end_time
    -if show_timezone
      %span.wday=l(lesson.start_time, format: :time_zone)
