%h1=title t("titles.subjects")

=render "menu"

-if @subjects.empty?
  =t('common.not_found')
-else
  =render layout:"subjects/subjects", locals:{subjects:@subjects} do |subject|
    -if subject.selected
      =img_link_to "common.deselect", deselect_tu_subject_path(subject), method:"post", class:"small"
    -else
      =img_link_to "common.select", select_tu_subject_path(subject), method:"post", class:"small"
  =paginate @subjects
