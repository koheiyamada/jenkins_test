- user_operating_system = UserOperatingSystem.new unless defined?(user_operating_system) && user_operating_system.present?
%tr
  %th=f.label :user_operating_system, class: 'required'
  %td
    =render 'user_operating_systems/fields', user_operating_system: user_operating_system

%tr
  %th=f.label :adsl
  %td=f.check_box :adsl

%tr
  %th=t('common.line_speed')
  %td.line-speed
    .line-speed-field
      =f.label :upload_speed, class: 'inline'
      =f.number_field :upload_speed, :step => 0.001, :min => 0, class:'input-mini'
      Mbps
    .line-speed-field
      =f.label :download_speed
      =f.number_field :download_speed, :step => 0.001, :min => 0, class:'input-mini'
      Mbps
