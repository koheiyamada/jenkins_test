%h1=title t("titles.lesson_reservation")

=form_for [:st, @lesson] do |f|
  %table.table
    %tbody
      %tr
        %th=f.label :subject_id
        %td=f.collection_select :subject_id, Subject.all, :id, :name
      %tr
        %th=f.label :tutor_id
        %td=f.collection_select :tutor_id, current_user.tutors, :id, :user_name
      %tr
        %th=f.label :start_time
        %td=f.datetime_select :start_time, {:minute_step => 15, :start_year => Date.today.year, :end_year => Date.today.year + 1}, class:"span2"
      %tr
        %th=f.label :units
        %td=f.select :units, options_for_select(@units), {}, class:"span1"
      %tr
        %th=f.label :is_group_lesson
        %td=f.check_box :is_group_lesson
  .actions.buttons
    =f.submit
