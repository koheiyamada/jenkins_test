    =t('common.not_found')
  -else
    =render layout: 'message_recipients/message_recipients', locals: {message_recipients: @message_recipients} do |message|
      =img_link_to 'common.detail', st_message_path(message), class: 'small'

%section.clearfix
  %h2=t("common.lesson_schedule")
  .lesson-calendar-holder{"data-path" => st_calendar_path}
