%h1=title t("titles.received_messages")

=render "shared/centered_search_box"
=render 'menu'

-if @message_recipients.empty?
  =t('common.not_found')
-else
  =render layout: 'message_recipients/message_recipients', locals: {message_recipients: @message_recipients} do |message|
    =render 'messages/buttons', path: {action: :show, id: message}
  =paginate(@message_recipients)
