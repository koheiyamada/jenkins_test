=content_for :tabmenu do
  =render 'nav_tab'

%h1=title t('titles.absent_tutors')

=render 'menu'

-if @tutors.blank?
  =t('common.not_found')
-else
  =render layout:'tutors/absent_tutors', locals: {tutors: @tutors} do |tutor|
    =img_link_to 'common.detail', {action: :show, id: tutor}, class: 'small'
  =paginate @tutors
