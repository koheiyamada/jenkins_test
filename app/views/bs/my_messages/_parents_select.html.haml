.recipients-select
  %h4
    %i.icon-user
    =t('common.parent')
  .all
    =label_tag 'recipients[all_parents]', class:'checkbox' do
      =check_box_tag 'recipients[all_parents]'
      =t('labels.all_parents')
  .individuals
    =select_tag "recipients[parent]", options_for_select(current_user.active_parents.map{|u| [user_display_name(u), u.id]}), multiple:true
