=content_for :subheader do
  =render 'breadcrumbs'

%h1=title t('student_messages.titles.list_of_x', student: user_display_name(@student))

=render 'menu'

-if @messages.empty?
  =t('common.not_found')
-else
  =render layout: 'messages/messages_all', locals: {messages: @messages} do |message|
    =render 'messages/buttons2', path: url_for(action: :show, id: message)
  =paginate(@messages)